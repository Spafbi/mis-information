<!-- Actions rebinded in any of these button layouts need to be duplicated in all 
the other button layouts with the input set to DEFAULT to work correctly -->

<ActionMaps ignoreVersion="1" >
	<actionmap name="player">
		<action name="zoom_toggle">
			<rebind device="xboxpad" input="DEFAULT" />
			<rebind device="ps4pad" input="DEFAULT" />
		</action>
		<action name="crouch">
			<rebind device="xboxpad" input="DEFAULT" />
			<rebind device="ps4pad" input="DEFAULT" />
		</action>
		<!-- MELEE -->
		<action name="special">
			<rebind device="xboxpad" input="DEFAULT" />
			<rebind device="ps4pad" input="DEFAULT" />
		</action>
		<!-- FIRE WEAPON -->
		<action name="attack1">
			<rebind device="xboxpad" input="DEFAULT" />
			<rebind device="ps4pad" input="pad_r2" />
		</action>
		<!-- IRONSIGHTS -->
		<action name="xi_zoom">
			<rebind device="xboxpad" input="DEFAULT" />
			<rebind device="ps4pad" input="pad_l2" />
		</action>
	</actionmap>
</ActionMaps>