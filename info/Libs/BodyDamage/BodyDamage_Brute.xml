<BodyDamage>
	<!-- PART DEFINITIONS IN "BodyParts_MutantsSharedBiped.xml" -->

	<Multipliers>
		<Multiplier part="head" value="2.0"> <!-- head is only 2x damage for the brute -->
			<ammo_12_gauge_pellet value="1.0"/>
		</Multiplier>
		<Multiplier part="armorHead" value="0.01"/> <!-- Damage multiplier for head when hitting armor -->
		<Multiplier part="armorBody" value="0.01"/> <!-- Damage multiplier for body when hitting armor -->
		<Multiplier part="torso"     value="0.75"/>
		<Multiplier part="armRight"  value="0.4"/>
		<Multiplier part="armLeft"   value="0.4"/>
		<Multiplier part="legLeft"   value="0.5"/>
		<Multiplier part="legRight"  value="0.5"/>
		<Multiplier part="footLeft"  value="0.2"/>
		<Multiplier part="footRight" value="0.2"/>
		<Multiplier part="handLeft"  value="0.2"/>
		<Multiplier part="handRight" value="0.2"/>
	</Multipliers>

	<ImpulseFilters>
		<ImpulseFilter part="armRight"  scale="0.0" passTo="Bip01 Spine1" passOnScale="0.5"/>
		<ImpulseFilter part="armLeft"   scale="0.0" passTo="Bip01 Spine1" passOnScale="0.5"/>
		<ImpulseFilter part="legLeft"   scale="0.0" passTo="Bip01 Spine1" passOnScale="-0.5"/>
		<ImpulseFilter part="legRight"  scale="0.0" passTo="Bip01 Spine1" passOnScale="-0.5"/>
		<ImpulseFilter part="handLeft"  scale="0.0" passTo="Bip01 Spine1" passOnScale="0.1"/>
		<ImpulseFilter part="handRight" scale="0.0" passTo="Bip01 Spine1" passOnScale="0.1"/>
		<ImpulseFilter part="footLeft"  scale="0.0" passTo="Bip01 Spine1" passOnScale="-0.1"/>
		<ImpulseFilter part="footRight" scale="0.0" passTo="Bip01 Spine1" passOnScale="-0.1"/>
	</ImpulseFilters>

</BodyDamage>
