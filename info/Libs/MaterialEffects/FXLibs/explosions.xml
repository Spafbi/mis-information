<FXLib>

	<!-- PIPEBOMB -->
	<Effect name="pipebomb_explosion_default" delay="0.05">
		<Audio trigger="Play_explosion" />
		<Particle>
			<Name minscale="0.75" maxscale="1.3" maxscaledist="80">weapon_fx.pipebomb.explosion</Name>
		</Particle>
		<RandEffect>
			<Decal minscale="1.2" maxscale="1.6" lifetime="5.0">
				<Material>materials/decals/default_blast</Material>
			</Decal>
		</RandEffect>
	</Effect>
	<Effect name="pipebomb_explosion_water" delay="0.05">
		<Audio trigger="Play_explosion" />
		<Audio trigger="Play_molotov_explosion" /> <!-- Play this in addition for now, to fudge water sounds -->
		<Particle>
			<Name minscale="0.75" maxscale="1.3" maxscaledist="80">weapon_fx.pipebomb.explosion_water</Name>
		</Particle>
	</Effect>

