<item name="ScrapMetal" class="Item" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="0.5"/>
		<param name="stack_size" value="64"/>
		<param name="display_name" value="@ScrapMetal"/>
		<param name="description" value="@ScrapMetalDescription"/>
	</params>

	<geometry>
		<thirdperson name="Objects/craftingMats/scrapMetal/scrap_metal_1.cgf"/>
	</geometry>

	<consumable>
		<!-- a cookable item must have cookedItem and cookedTime defined -->
		<param name="cookable" value="1" />
		<param name="cookedItem" value="IronIngot" />
		<param name="cookedTime" value="30" />	
	</consumable>

	<usable>
		<uses>
			<use>
				<param name="title" value="@ScrapMetalSmeltInFurnace"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="Furnace"/>
			</use>
		</uses>
	</usable>

	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

</item>
