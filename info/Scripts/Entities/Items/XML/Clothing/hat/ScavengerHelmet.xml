	<geometry>
		<onground name="Objects/characters/players/generic/hat/scavenger_helmet/scavenger_helmet_onground.cgf" material="objects/characters/players/generic/hat/scavenger_helmet/scavenger_helmet"/>
	</geometry>

	<protection level="3"> <!-- Only used for the UI tool tip protection amount -->
		<environmental>
			<protection_amount type="physical" percentage="20"/>
			<protection_amount type="explosion" percentage="10"/>
			<protection_amount type="rain_acid" percentage="10"/>
            <protection_amount type="cold" percentage="10"/>
		</environmental>
		<protectBodyPart name="head">
			<!-- PROTECT AGAINST MELEE -->
			<protection_amount hit_type="blunt" percentage="80.0"/>
			<protection_amount hit_type="melee" percentage="80.0"/>
			<!-- SURVIVE 1 HEADSHOT -->
			<protection_amount hit_type="ammo_22" percentage="75.0"/> <!-- Takes down to 10/16% -->
			<protection_amount hit_type="ammo_9mm" percentage="60.0"/>
			<protection_amount hit_type="ammo_5_56x45" percentage="50.0"/>
			<protection_amount hit_type="ammo_7_62x39" percentage="25.0"/>
			<protection_amount hit_type="ammo_308" percentage="25.0"/>
			<protection_amount hit_type="ammo_223" percentage="25.0"/>
			<protection_amount hit_type="ammo_357" percentage="25.0"/>
			<protection_amount hit_type="ammo_acp_45" percentage="60.0"/>
			<protection_amount hit_type="ammo_10mm" percentage="50"/>	
		</protectBodyPart>
	</protection>

	<explosion> <!-- Only used to show PFX on destroy -->
		<param name="damage" value="0"/>
		<param name="pressure" value="0"/>
		<param name="min_radius" value="0"/>
		<param name="max_radius" value="0"/>
		<param name="min_phys_radius" value="0"/>
		<param name="max_phys_radius" value="0"/>
		<param name="sound_radius" value="0"/>
