<item name="ScavengerHelmet" class="Item" category="any">
	<params>
		<param name="colorable" value="1"/>
		<param name="droppable" value="1"/>
		<param name="selectable" value="0"/>
		<param name="auto_wear" value="1"/>
		<param name="mass" value="1.5"/>
		<param name="healthMax" value="100.0"/>
		<param name="damage_scale" value="0.5"/>
		<param name="destroyWhenDegraded" value="1"/>
		<param name="display_name" value="Scavenger Helmet"/>
		<param name="description" value="A motorcycle helmet with a stud mohawk."/>
	</params>

	<wearable>
		<param name="skin" value="Objects/characters/players/generic/hat/scavenger_helmet/scavenger_helmet.skin"/>
