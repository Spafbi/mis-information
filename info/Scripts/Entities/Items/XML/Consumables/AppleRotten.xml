<item name="AppleRotten" class="Consumable" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="0.2"/>
		<param name="stack_size" value="5"/>
		<param name="display_name" value="@AppleRotten"/>
		<param name="description" value="@AppleRottenDescription"/>
	</params>

	<geometry>
		<thirdperson name="Objects/consumables/apples/apple_rotten.cgf"/>
	</geometry>

	<consumable>
		<param name="poisonChance" value="85"/>
		<param name="foodAmount" value="42"/> <!-- 0.5x fresh food -->
		<param name="drinkAmount" value="20"/>
		<param name="torpidityAmount" value="30"/>
		<param name="staminaAmount" value="-30"/>
		<param name="soundConsumed" value="Play_food_soft_eat"/>
	</consumable>

	<usable>
		<param name="title" value="@AppleRottenFertilizePlanter"/>
		<param name="action" value="fertilize"/>
		<param name="soundUsed" value="Play_apply_fertilizer"/>
		<param name="targetClassNames" value="planter_box"/>
	</usable>
	
	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

</item>