<item name="Radishes" class="Consumable" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="0.2"/>
		<param name="stack_size" value="15"/>
		<param name="display_name" value="@Radishes"/>
		<param name="description" value="@RadishesDescription"/>
	</params>

	<geometry>
		<thirdperson name="Objects/consumables/radish/radish_pile.cgf"/>
	</geometry>

	<usable>
		<uses>
			<use>
				<param name="title" value="@RadishesCookInOven"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_oven"/>
				<param name="targetClassNames" value="powered_oven"/>
			</use>
			<use>
				<param name="title" value="@RadishesCookInMicrowave"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_microwave"/>
				<param name="targetClassNames" value="powered_microwave"/>
			</use>
			<use>
				<param name="title" value="@RadishesCookOnGrill"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_grill_base;dws_grill2"/>
			</use>
			<use>
				<param name="title" value="@RadishesCookOnStove"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_cabinStove"/>
			</use>
			<use>
				<param name="title" value="@RadishesCookOnFirepit"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_firepit_outdoors_1;dws_firepit_outdoors_2"/>
			</use>
			<use>
				<param name="title" value="@RadishesCookOnCampfire"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="Campfire"/>
			</use>
		</uses>
	</usable>

	<consumable>
		<param name="cookable" value="1"/>
		<param name="cookedItem" value="RadishesCooked"/>
		<param name="cookedTime" value="100"/>
		<param name="rottenItem" value="RadishesRotten"/>
		<param name="foodAmount" value="65"/>
		<param name="drinkAmount" value="20"/>
		<param name="soundConsumed" value="Play_food_raw_eat"/>
	</consumable>

	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

</item>