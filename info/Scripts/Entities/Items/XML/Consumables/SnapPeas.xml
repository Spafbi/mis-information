<item name="SnapPeas" class="Consumable" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="0.2"/>
		<param name="stack_size" value="15"/>
		<param name="display_name" value="@SnapPeas"/>
		<param name="description" value="@SnapPeasDescription"/>
	</params>

	<geometry>
		<thirdperson name="Objects/consumables/snap_peas/snap_peas_pile.cgf"/>
	</geometry>

	<usable>
		<uses>
			<use>
				<param name="title" value="@SnapPeasCookInOven"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_oven"/>
				<param name="targetClassNames" value="powered_oven"/>
			</use>
			<use>
				<param name="title" value="@SnapPeasCookInMicrowave"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_microwave"/>
				<param name="targetClassNames" value="powered_microwave"/>
			</use>
			<use>
				<param name="title" value="@SnapPeasCookOnGrill"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_grill_base;dws_grill2"/>
			</use>
			<use>
				<param name="title" value="@SnapPeasCookOnStove"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_cabinStove"/>
			</use>
			<use>
				<param name="title" value="@SnapPeasCookOnFirepit"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_firepit_outdoors_1;dws_firepit_outdoors_2"/>
			</use>
			<use>
				<param name="title" value="@SnapPeasCookOnCampfire"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="Campfire"/>
			</use>
		</uses>
	</usable>

	<consumable>
		<param name="cookable" value="1"/>
		<param name="cookedItem" value="SnapPeasCooked"/>
		<param name="cookedTime" value="100"/>
		<param name="rottenItem" value="SnapPeasRotten"/>
		<param name="foodAmount" value="100"/>
		<param name="drinkAmount" value="10"/>
		<param name="soundConsumed" value="Play_food_soft_eat"/>
	</consumable>

	<craftable>
		<craft name="SurvivalKnife" craft="SeedsSnapPeas" destroy="0"/>
		<craft name="HuntingKnife" craft="SeedsSnapPeas" destroy="0"/>
	</craftable>

	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

</item>