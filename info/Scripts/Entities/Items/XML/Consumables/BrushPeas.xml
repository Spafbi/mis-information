<item name="BrushPeas" class="Consumable" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="0.2"/>
		<param name="stack_size" value="10"/>
		<param name="display_name" value="@BrushPeas"/>
		<param name="description" value="@BrushPeasDescription"/>
	</params>

	<geometry>
		<thirdperson name="Objects/consumables/brush_peas/brush_peas_pile.cgf"/>
	</geometry>

	<consumable>
		<param name="cookable" value="1"/>
		<param name="cookedItem" value="BrushPeasCooked"/>
		<param name="cookedTime" value="100"/>
		<param name="rottenItem" value="BrushPeasRotten"/>
		<param name="foodAmount" value="100"/>
		<param name="drinkAmount" value="10"/>
		<param name="soundConsumed" value="Play_food_soft_eat"/>
	</consumable>

	<usable>
		<uses>
			<use>
				<param name="title" value="@BrushPeasCookInOven"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_oven"/>
				<param name="targetClassNames" value="powered_oven"/>
			</use>
			<use>
				<param name="title" value="@BrushPeasCookInMicrowave"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_microwave"/>
				<param name="targetClassNames" value="powered_microwave"/>
			</use>
			<use>
				<param name="title" value="@BrushPeasCookOnGrill"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_grill_base;dws_grill2"/>
			</use>
			<use>
				<param name="title" value="@BrushPeasCookOnStove"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_cabinStove"/>
			</use>
			<use>
				<param name="title" value="@BrushPeasCookOnFirepit"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="dws_firepit_outdoors_1;dws_firepit_outdoors_2"/>
			</use>
			<use>
				<param name="title" value="@BrushPeasCookOnCampfire"/>
				<param name="action" value="food_item"/>
				<param name="soundUsed" value="Play_food_in_grill"/>
				<param name="targetClassNames" value="Campfire"/>
			</use>
		</uses>
	</usable>

	<craftable>
		<craft name="SurvivalKnife" craft="SeedsBrushPeas" destroy="0"/>
		<craft name="HuntingKnife" craft="SeedsBrushPeas" destroy="0"/>
	</craftable>

	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

</item>