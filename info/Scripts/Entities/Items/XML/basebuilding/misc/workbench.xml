<item name="workbench" class="Placeable" category="any">

	<params>
		<param name="selectable" value="0"/>
		<param name="mass" value="5.5"/>
		<param name="display_name" value="@workbench"/>
		<param name="description" value="@workbenchDescription"/>
	</params>

	<base_part class="static" type="4849" name="workbench" max_health="5000">
		<static filename="objects/basebuilding/other/workbench/workbench_base.cgf"/>
		<base_actions>
			<!-- just opens the player's inventory -->
			<base_action class="open_inventory">
				<open_inventory message="@workbench_open_inventory"/>
			</base_action>
		</base_actions>
	</base_part>

	<geometry>
		<thirdperson name="objects/basebuilding/wood/wood_part.cgf"/>
	</geometry>

	<storage>
		<locations>
			<location category="any"/>
		</locations>
	</storage>

	<steam>
		<param name="tags" value="Category:BaseBuilding"/>
		<param name="icon_url" value="http://miscreatedgame.com/shots/item_images/workbench_200.png?crc=739E8FDD"/>
		<param name="store_hidden" value="0"/>
		<param name="amcoins" value="1"/>
		<param name="tradable" value="0"/>
		<param name="name_color" value="FF001E"/>
		<param name="itemdefid" value="30313"/>
		<param name="marketable" value="0"/>
		<param name="store_tags" value="Category:BaseBuilding"/>
		<param name="background_color" value="2A2A2A"/>
		<param name="hidden" value="0"/>
		<param name="icon_url_large" value="http://miscreatedgame.com/shots/item_images/workbench_2048.png?crc=739E8FDD"/>
	</steam>
</item>