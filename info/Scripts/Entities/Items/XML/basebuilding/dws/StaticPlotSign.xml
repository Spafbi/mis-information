<item name="StaticPlotSign" class="StaticPlotSign" category="any">

	<params>
		<param name="droppable" value="0" />
		<param name="selectable" value="0" />
		<param name="mass" value="10" />
		<param name="physics" value="1" /> <!-- static -->
		<param name="display_name" value="" />
		<param name="no_icon" value="1" />
	</params>

	<placeable>
		<damage_multipliers>
			<!-- standard hit types -->
			<damage_multiplier damage_type="default"   multiplier="1.0" />
			<damage_multiplier damage_type="collision" multiplier="0.1" />
			<damage_multiplier damage_type="explosion" multiplier="20.0" />
			<damage_multiplier damage_type="frag"      multiplier="20.0" />
			<damage_multiplier damage_type="fire"      multiplier="1.0" />
			<damage_multiplier damage_type="melee"     multiplier="1.0" /> <!-- Scaled so mutants can damage doors. Damage values set in kythera/profiles.xml as "MeleeHitDoorDamage" -->
			<damage_multiplier damage_type="repair"    multiplier="0.0" /> <!-- repair weapons do nothing -->
			<!-- Projectiles -->
			<damage_multiplier damage_type="ammo_10mm"              multiplier="0.5" />
			<damage_multiplier damage_type="ammo_12_gauge_beanbag"  multiplier="0.5" />
			<damage_multiplier damage_type="ammo_12_gauge_pellet"   multiplier="3.5" />
			<damage_multiplier damage_type="ammo_12_gauge_slug"     multiplier="0.5" />
			<damage_multiplier damage_type="ammo_22"                multiplier="0.5" />
			<damage_multiplier damage_type="ammo_223"               multiplier="0.5" />
			<damage_multiplier damage_type="ammo_308"               multiplier="0.5" />
			<damage_multiplier damage_type="ammo_357"               multiplier="0.5" />
			<damage_multiplier damage_type="ammo_5_45x39"           multiplier="0.5" />
			<damage_multiplier damage_type="ammo_5_56x45"           multiplier="0.5" />
			<damage_multiplier damage_type="ammo_5_70x28"           multiplier="0.5" />
			<damage_multiplier damage_type="ammo_7_62x39"           multiplier="0.5" />
			<damage_multiplier damage_type="ammo_7_62x51"           multiplier="0.5" />
			<damage_multiplier damage_type="ammo_9mm"               multiplier="0.5" />
			<damage_multiplier damage_type="ammo_acp_45"            multiplier="0.5" />
			<damage_multiplier damage_type="ammo_rock_lge"          multiplier="10.0" /> <!-- AI rocks do significant damage -->
			<damage_multiplier damage_type="ammo_rock_sml"          multiplier="5.0" /> <!-- AI rocks do significant damage -->
			<damage_multiplier damage_type="ammo_rock_player"       multiplier="0.5" />
			<damage_multiplier damage_type="ammo_tranquilizer_dart" multiplier="0.5" />
			<damage_multiplier damage_type="arrow"                  multiplier="0.5" />
			<damage_multiplier damage_type="blunt"                  multiplier="0.5" />
			<damage_multiplier damage_type="flare"                  multiplier="0.0" />
			<!-- Melee -->
			<damage_multiplier damage_type="hammer"                 multiplier="0.5" />
			<damage_multiplier damage_type="hatchet"                multiplier="0.5" />
			<damage_multiplier damage_type="knife"                  multiplier="0.25" />
			<damage_multiplier damage_type="pickaxe"                multiplier="0.6" />
			<damage_multiplier damage_type="torch"                  multiplier="0.0" />
		</damage_multipliers>
	</placeable>

	<geometry>
		<thirdperson name="Objects/basebuilding/other/plot_sign/static_plot_sign.cgf" />
	</geometry>

</item>
