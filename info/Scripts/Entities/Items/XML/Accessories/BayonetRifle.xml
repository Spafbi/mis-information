<item name="BayonetRifle" class="Item" category="any">
	<params>
		<param name="display_name" value="@BayonetRifle"/>
		<param name="description" value="@BayonetRifleDescription"/>
		<param name="selectable" value="0"/>
		<param name="mass" value="0.3"/>
		<param name="tag" value="bayonet"/>
		<param name="hide_as_attachment" value="0"/>
		<param name="vendor_cost" value="2"/>
	</params>

	<geometry>
		<onground name="Objects/weapons/bayonet/bayonet.cgf"/> <!-- We only display onground model. TP model controlled in Script -->
	</geometry>

	<storage>
		<locations>
			<location category="any"/>
			<location category="barrel_end"/>
		</locations>
	</storage>

</item>