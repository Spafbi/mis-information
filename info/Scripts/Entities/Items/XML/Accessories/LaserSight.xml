<item name="LaserSight" class="Laser" category="any">
	<params>
		<param name="display_name" value="@LaserSight"/>
		<param name="description" value="@LaserSightDescription"/>
		<param name="selectable" value="0"/>
		<param name="mass" value="0.1"/>
		<param name="hide_as_attachment" value="0"/>
		<param name="dontRotateOnSpawn" value="1"/>
		<param name="vendor_cost" value="2"/>
	</params>

	<geometry>
		<firstperson name="objects/weapons/attachments/laser_sight/laser_sight.cgf"/>
		<thirdperson name="objects/weapons/attachments/laser_sight/laser_sight.cgf"/>
	</geometry>

	<laser>
		<firstperson laser_dot="weapon_fx.laser_sight.aimdot_tp" laser_range="150" laser_thickness="15"/>

		<thirdperson laser_geometry_tp="objects/weapons/attachments/laser_beam/laser_beam.cgf" laser_dot="weapon_fx.laser_sight.aimdot_tp" laser_range="150" laser_thickness="15"/>
	</laser>

	<storage>
		<locations>
			<location category="any"/>
			<location category="barrel_left"/>
		</locations>
	</storage>

</item>