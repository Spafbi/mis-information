						<Actions anglesMax="0,130,0"/>
					</SteeringWheel>
				</SeatAction>
				<SeatAction class="Lights">
					<Lights activation="toggle">
						<LightParts>
							<LightPart value="lampLight"/>
							<LightPart value="lampLightFill"/>
